{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "lib": ["es2015"],
    "module": "commonjs",
    "rootDir": "src",
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "outDir": "./lib"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/test", "./src/**/*.test.ts", "./src/__test__"]
}
